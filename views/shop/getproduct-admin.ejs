      </div>
      <div class="categoryitem">
        <img
          src="https://static.nike.com/a/images/t_PDP_1280_v1/f_auto/znzrwmot6iopiyrsynet/sportswear-club-fleece-big-kids-boys-open-hem-pants-fl6Hp6.jpg"
        />
        <div class="info">
          <h1 class="title">SPORTS SHOES(for men)</h1>
          <a href="/products/sports shoes(man)"
            ><button type="submit">SHOP NOW</button></a
          >
        </div>
      </div>
      <div class="categoryitem">
        <img
          src="https://www.neighborsmn.org/wp-content/uploads/2018/07/clothes-closet.jpg"
        />
        <div class="info">
          <h1 class="title">View All Products</h1>
          <a href="/products/all"><button type="submit">SHOP NOW</button></a>
        </div>
      </div>
    </div>
    <h1
      style="
        margin-bottom: 0px;
        margin-top: 20px;
        background-color: beige;
        padding: 20px;
      "
    >
      <u>Admin Products</u>
    </h1>
    <% if(prods.length>0) {%>
    <div class="productlist">
      <% for(let product of prods){%>
      <div class="products">
        <img src="<%=product.img%>" />
        <div class="info">
          <div class="icons">
            <form action="/deleteproduct" method="POST">
              <input
                type="hidden"
                value="<%=product._id%>"
                name="productId"
              /><button type="submit"><i class="fas fa-trash-alt"></i></button>
            </form>
          </div>
          <div class="icons">
            <a href="/edit-product/<%=product._id%>"
              ><i class="fas fa-edit"></i
            ></a>
          </div>
        </div>
      </div>
      <% }%>
    </div>
    <% }%>
    <div class="newsletter">
      <h1 class="title">Newsletter</h1>
      <div class="description">
        Get timely updates from your favorite products.
      </div>
      <div class="inputcontainer">
        <input type="email" placeholder="enter email" name="email" />
        <button type="submit"><i class="fab fa-telegram-plane"></i></button>
